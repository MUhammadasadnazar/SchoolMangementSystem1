<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
         android:background="@color/mainbgcolor"
    tools:context=".LogInActivity">
    <ImageView
            android:src="@drawable/logintop"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"></ImageView>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center"
        android:layout_weight="2">

        <EditText
                android:padding="20dp"
                android:layout_margin="20dp"
                android:background="@drawable/edttextbg"
                 android:id="@+id/edtuname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Username"></EditText>
        <EditText
                android:padding="20dp"
                android:layout_margin="20dp"
                android:background="@drawable/edttextbg"
                android:id="@+id/edtupassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password"></EditText>
        <RadioGroup
                android:id="@+id/radiogriup1"
                android:layout_gravity="right"
                android:layout_marginRight="30dp"
                android:gravity="left"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
            <RadioButton
                    android:id="@+id/_radiobutttonstaff"
                    android:textColor="@color/white"
                    android:text="Staff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

            </RadioButton>
            <RadioButton
                    android:id="@+id/_radiobuttonstudent"
                    android:textColor="@color/white"
                    android:text="Student"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

            </RadioButton>
        </RadioGroup>

        <TextView
                android:layout_marginTop="10dp"
                android:paddingVertical="20dp"
                android:paddingHorizontal="100dp"
                android:background="@drawable/edttextbg"
                android:onClick="SignInnnnn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LOG IN"></TextView>

        <TextView
                android:onClick="ResetPassword"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_marginTop="10dp"
                android:textStyle="italic"
                android:text="Reset Password?"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
    </LinearLayout>



</LinearLayout>