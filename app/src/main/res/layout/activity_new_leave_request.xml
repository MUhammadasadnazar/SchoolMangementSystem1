<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainbgcolor"
        tools:context=".LeaveRequest.NewLeaveRequest">
    <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/mainlogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ImageView>

    <LinearLayout
            android:layout_marginHorizontal="10dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                 android:layout_height="wrap_content">
            <DatePicker
                    android:id="@+id/_datepicker1"
                    android:onClick="ShowDatePicker"
                    android:layout_margin="10dp"
                    android:layout_width="0dp"
                android:layout_weight="1"
                    android:layout_height="100dp"></DatePicker>
            <DatePicker
                    android:id="@+id/_datepicker2"
                    android:onClick="ShowDatePicker"
                    android:layout_margin="10dp"
                    android:layout_width="0dp"
                android:layout_weight="1"
                    android:layout_height="100dp"></DatePicker>
        </LinearLayout>
        <TextView
                android:layout_margin="10dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:text="Request Submitted by : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
        <EditText
                android:id="@+id/_edtreqsubmitby"
                 android:textColor="@color/white"
                android:padding="14dp"
                android:background="@drawable/bordershape1"
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        <TextView
                android:layout_margin="10dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:text="Request Reason : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
        <EditText
                android:id="@+id/_edtreqreason"
                 android:textColor="@color/white"
                android:padding="14dp"
                android:background="@drawable/bordershape1"
                 android:layout_width="match_parent"
                android:layout_height="wrap_content"></EditText>
        <TextView
                android:layout_margin="10dp"
                android:textSize="18dp"
                android:textColor="@color/white"
                android:text="Request Remarks : "
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
        <EditText
                android:inputType="textMultiLine"
                android:id="@+id/_edtreqremarks"
                 android:textColor="@color/white"
                android:padding="14dp"
                android:background="@drawable/bordershape1"
                 android:layout_width="match_parent"
                android:layout_height="100dp"></EditText>

        <Button
                android:onClick="SubmitNewRequest"
                android:background="@color/edttextbg"
                android:layout_margin="20dp"
                android:text="Save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></Button>

    </LinearLayout>


</LinearLayout>