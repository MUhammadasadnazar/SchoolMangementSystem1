<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:orientation="vertical"
    android:gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:background="@color/mainbgcolor"
    tools:context=".MainActivity">

    <ImageView
             android:src="@drawable/mainlogo"
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ImageView>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/_linearlayoutstdentsubject"
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                            android:onClick="CreateNewStaff"
                            android:layout_margin="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:outlineAmbientShadowColor="@color/boxbgcolor"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/boxbgcolor"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_margin="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/teacher"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"></ImageView>
                            <TextView
                                    android:textSize="18dp"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="Staff "
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"></TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:onClick="AddNewClass"
                            android:layout_margin="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp"
                            android:paddingVertical="10dp"
                            app:cardBackgroundColor="@color/boxbgcolor"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_margin="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/classs"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"></ImageView>
                            <TextView
                                    android:textSize="18dp"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="Class"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"></TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                            android:onClick="AddNewStudent"
                            android:layout_margin="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:outlineAmbientShadowColor="@color/boxbgcolor"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/boxbgcolor"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_margin="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/student"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"></ImageView>
                            <TextView
                                    android:textSize="18dp"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="Student"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"></TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:onClick="GoToSubjectList"
                            android:layout_margin="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp"
                            android:paddingVertical="10dp"
                            app:cardBackgroundColor="@color/boxbgcolor"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_margin="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/subject"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"></ImageView>
                            <TextView
                                    android:textSize="18dp"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="Subjects"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"></TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                            android:onClick="GoToTimeTable"                    android:layout_margin="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:outlineAmbientShadowColor="@color/boxbgcolor"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/boxbgcolor"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_margin="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/timetable"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"></ImageView>
                            <TextView
                                    android:textSize="18dp"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="TimeTable"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"></TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:onClick="GoToAttendance"
                            android:layout_margin="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp"
                            android:paddingVertical="10dp"
                            app:cardBackgroundColor="@color/boxbgcolor"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_margin="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/attendance"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"></ImageView>
                            <TextView
                                    android:textSize="18dp"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="Attendance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"></TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>
            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <LinearLayout
                        android:orientation="horizontal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                            android:onClick="goToLeaveRequest"                    android:layout_margin="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:outlineAmbientShadowColor="@color/boxbgcolor"
                            app:cardCornerRadius="10dp"
                            app:cardBackgroundColor="@color/boxbgcolor"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_margin="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/leave"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"></ImageView>
                            <TextView
                                    android:textSize="18dp"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="Leave Request"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"></TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>
                    <androidx.cardview.widget.CardView
                            android:onClick="GoToAttendance"
                            android:layout_margin="20dp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            app:cardCornerRadius="10dp"
                            android:paddingVertical="10dp"
                            app:cardBackgroundColor="@color/boxbgcolor"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:layout_margin="10dp"
                                android:orientation="vertical"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <ImageView
                                    android:layout_gravity="center"
                                    android:src="@drawable/attendance"
                                    android:layout_width="100dp"
                                    android:layout_height="100dp"></ImageView>
                            <TextView
                                    android:textSize="18dp"
                                    android:textColor="@color/white"
                                    android:gravity="center"
                                    android:text="Attendance"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"></TextView>

                        </LinearLayout>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </LinearLayout>

            <Button
                    android:onClick="LogOut"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Log OUt"></Button>
            <!--Btn Create New Staff-->
            <Button
                    android:visibility="gone"
                    android:id="@+id/_btnCreateNewStaff"
                    android:onClick="CreateNewStaff"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create New Staff"></Button>
            <Button
                    android:visibility="gone"
                    android:id="@+id/_btnAddNewClass"
                    android:onClick="AddNewClass"
                    android:layout_marginHorizontal="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Create New Class"></Button>
            <!--Student Button-->
            <Button
                    android:visibility="gone"
                    android:onClick="AddNewStudent"
                    android:layout_marginHorizontal="30dp"
                    android:text="Student List"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Button>
            <!--    SubjectList-->
            <Button
                    android:visibility="gone"
                    android:onClick="GoToSubjectList"
                    android:layout_marginHorizontal="30dp"
                    android:text="Subject List"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Button>
            <!--    TimeTable Button-->
            <Button
                    android:visibility="gone"
                    android:onClick="GoToTimeTable"
                    android:layout_marginHorizontal="30dp"
                    android:text="Time Table"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></Button>

        </LinearLayout>
    </ScrollView>





</LinearLayout>