<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainbgcolor"
        tools:context=".StudentProfileActivity">

    <ImageView
            android:layout_marginTop="10dp"
            android:src="@drawable/mainlogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ImageView>


    <LinearLayout
            android:layout_gravity="center"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:id="@+id/_tvfname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>
        <TextView
                android:gravity="center"
                android:id="@+id/_tvrollno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></TextView>

        <LinearLayout
                android:padding="20dp"
                android:layout_margin="20dp"
                android:background="@drawable/edttextbg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textStyle="bold"
                        android:text="Mobile No  "
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"></TextView>
                <TextView
                        android:id="@+id/_Mobileno"
                        android:layout_width="0dp"
                        android:layout_weight="1"                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textStyle="bold"
                        android:text="Email Address  "
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"></TextView>
                <TextView
                        android:gravity="center"
                        android:id="@+id/_emailaddress"
                        android:layout_width="0dp"
                        android:layout_weight="2"                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>





        </LinearLayout>
        <LinearLayout
                android:padding="20dp"
                android:layout_margin="20dp"
                android:background="@drawable/edttextbg"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textStyle="bold"
                        android:text="Guardian Name  "
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"></TextView>
                <TextView
                        android:id="@+id/_GMobileno"
                        android:layout_width="0dp"
                        android:layout_weight="1"                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textStyle="bold"
                        android:text="Guar-Phone #  "
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"></TextView>
                <TextView
                        android:gravity="center"
                        android:id="@+id/_Gemailaddress"
                        android:layout_width="0dp"
                        android:layout_weight="2"                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>
            <LinearLayout
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <TextView
                        android:textStyle="bold"
                        android:text="Home Address"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"></TextView>
                <TextView
                        android:gravity="center"
                        android:id="@+id/_Ghomeaddress"
                        android:layout_width="0dp"
                        android:layout_weight="2"                    android:layout_height="wrap_content"></TextView>
            </LinearLayout>





        </LinearLayout>

    </LinearLayout>

</LinearLayout>