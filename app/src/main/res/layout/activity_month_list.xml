<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        android:orientation="vertical"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mainbgcolor"
        tools:context=".Attendance.MonthListActivity">
    <ImageView
            android:layout_marginTop="20dp"
            android:src="@drawable/mainlogo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ImageView>

    <Button
            android:id="@+id/_btntodayattendance"
            android:onClick="GoToTodayAttendance"
            android:layout_margin="20dp"
            android:text="Today Attendance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Button>

    <ListView
            android:layout_marginHorizontal="10dp"
            android:background="@drawable/edttextbg"
            android:id="@+id/_listviewmonthlist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></ListView>

</LinearLayout>